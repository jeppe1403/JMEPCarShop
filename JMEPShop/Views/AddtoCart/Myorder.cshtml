@model IEnumerable<JMEPShop.Models.Car>

@{
    ViewBag.Title = "Myorder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int sum = 0;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style type="text/css">
    .label {
        font-size: 10pt;
        font-weight: bold;
        font-family: Arial;
    }

    .contents {
        border: 1px dotted black;
        padding: 5px;
        width: 300px;
    }

    .name {
        color: #18B5F0;
    }

    .left {
        float: left;
        width: 50px;
        height: 50px;
    }

    .right {
        margin-left: 60px;
        line-height: 50px;
    }

    .clear {
        clear: both;
    }

    #footer {
        position: fixed;
        bottom: 0px;
        height: 3px;
        background-color: #666;
        color: #eee;
        width: 100%
    }
</style>

<div id="dvContents">
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th>Car</th>
                <th></th>
                <th>Image</th>
                <th>Price</th>
                <th>Remove</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
            <tr>
                <td>@c.Name</td>
                <td></td>
                <td>
                    <img id="img1" src="/Images/@c.Url" height="100" width="75" />
                </td>
                <td>$ @c.Price</td>

                <td>
                    <button id="btn_delete" class="label label-primary" data-slno="@c.ID" onclick="location.href='@Url.Action("Remove","AddToCart",c)'">
                        <img src="/Icons/delete.png" height="30" width="30" />
                    </button>
                </td>
            </tr>
            }
        </tbody>

        @foreach (var x in Model)
        {
            sum = Convert.ToInt32(x.Price) + sum;

        }
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td><b>Total</b></td>
                <td>
                    $ @sum
                </td>
                <td></td>
            </tr>

        </tfoot>

    </table>
    <div id="footer">
        <img src="~/Templates/Footer.jpg" width="100%" height="60px" />
    </div>

    <button type="button" id="btnPrint" class="btn btn-primary">Print</button>
    <a href="@Url.Action("ProductList", "Cars")" class="btn btn-success">Continue Shopping</a>
    <button type="button" class="btn btn-warning">Place Order</button>
</div>

