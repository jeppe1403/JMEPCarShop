@model IEnumerable<JMEPShop.Models.Car>

@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.js"></script>
<script src="app.js"></script>
<h3> Product Specification </h3>
<div>
    <div class="panel panel-default">
        @foreach (var c in Model)
        {
        <div class="panel-heading">@c.Name</div>
        <div class="panel-body">
            <div class="col-sm-3 col-md-6" style="color:blue">
                <a>
                    <img src="/Images/@c.Url" width="400" height="400" />
                </a>
            </div>
            <div class="col-sm-9 col-md-6">
                <h3>
                    <span style="color:black">
                        <b>Car Name:</b>
                    </span>
                </h3>
                <h6>
                    <span id="carname" style="color:black"> @c.Name </span>
                </h6>
                <h3>
                    <span id="carname" style="color:black">
                        <b>Features:</b>
                    </span>
                </h3>
                <h6>
                    <span id="carname" style="color:black"> @c.Description </span>
                </h6>
                <h3>
                    <span id="carname" style="color:black">
                        <b>Color:</b>
                    </span>
                </h3>
                <h4>
                    <span id="carname" style="color:black"> @c.Color </span>
                </h4>
                <h3>
                    <span id="carname" style="color:black">
                        <b>Price:</b>
                    </span>
                </h3>
                <h6>
                    <span id="carname" style="color:black"> @c.Price </span>
                </h6>
            </div>
        </div>
        <div>
            <a id="btn_add" href="@Url.Action("Add", "AddToCart",c)" class="btn btn-info btn-lg" style="margin-left:60px">
                <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
            </a>
            <a id="btn_add" href="@Url.Action("ProductList", "Cars")" class="btn btn-info btn-lg" style="margin-left:60px">
                <span class="glyphicon glyphicon-eye-open"> </span> Continue shopping
            </a>
        </div>
        }
    </div>
</div>

